<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleJourneyActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ViewSingleJourney_titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/ViewSingleJourney_journeyImg"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            app:srcCompat="@drawable/running" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average speed:"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Statistics_distanceToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="0.00 KM/H"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Rating:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ViewSingleJourney_ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="3"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Date:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ViewSingleJourney_dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/01/2020"
            android:textColor="@color/teal_700"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/ViewSingleJourney_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textColor="#000"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/Statistics_timeToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/teal_700"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Statistics_recordDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 KM"
            android:textColor="@color/teal_700"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ViewSingleJourney_commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Comment"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:onClick="onClickMap"
            android:padding="8dp"
            android:text="VIEW MAP" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:onClick="onClickEdit"
            android:padding="8dp"
            android:text="EDIT JOURNEY"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>